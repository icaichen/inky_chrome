{
    "manifest_version": 3,
    "name": "E-Ink Paper Mode",
    "version": "1.2.0",
    "description": "Kindle/E-Ink 纸质观感：颗粒、纸纹、可选色彩，Kindle 模式含残影刷新。",
    "permissions": ["activeTab", "storage", "webNavigation"],
    "host_permissions": ["<all_urls>"],
    "background": { "service_worker": "background.js" },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js", "libs/readability.js", "reader.js"],
        "run_at": "document_idle",
        "all_frames": true,
        "match_about_blank": true
      }
    ]
  }
